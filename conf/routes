#-> /blockchain restapi.Routes
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET /newblock/:hash                 controllers.Application.newblock(hash: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


GET      /blockchain/v1/ws                                             controllers.Application.ws

GET      /blockchain/v1/blocks/current                                 controllers.RESTApi.getCurrentBlock

GET      /blockchain/v1/addresses/:addressesHashes/transactions        controllers.RESTApi.getAddressesTransactions(addressesHashes: String, blockHash: Option[String])
GET      /blockchain/v1/addresses/:addressesHashes/unspents            controllers.RESTApi.getAddressesUnspents(addressesHashes: String)

GET      /blockchain/v1/transactions/:txsHashes                        controllers.RESTApi.getTransactions(txsHashes: String)
GET      /blockchain/v1/transactions/:txsHashes/hex                    controllers.RESTApi.getTransactionsHex(txsHashes: String)
POST     /blockchain/v1/transactions/send                              controllers.RESTApi.sendTransaction
